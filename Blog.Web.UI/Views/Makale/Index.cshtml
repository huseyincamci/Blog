@model IEnumerable<Blog.DAL.Data.Entities.Makale>
@{
    ViewBag.Title = "Makaleler Blog Engine";
}

<h2>Makaleler</h2>
<br />

<div class="row">
    <div class="col-md-12">
        @if (Model.ToList().Count > 0)
        {
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Özet</th>
                        <th>Eklenme Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var makale in Model)
                    {
                        <tr>
                            <td>@makale.Id</td>
                            <td>@makale.Baslik</td>
                            <td>@makale.Ozet</td>
                            <td>@makale.CreatedDate.ToLocalTime().ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">Hiç kayıt bulunamadı.</div>
        }
    </div>
</div>
